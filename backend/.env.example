# ===========================================
# Vortex CTI Dashboard - Backend Configuration
# ===========================================

# Required - MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/vortex

# Required - JWT Secret (min 32 characters)
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters

# Optional - Initial Admin User
# Only creates admin if no users exist AND password is set
DEFAULT_ADMIN_PASSWORD=your-secure-admin-password
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com

# Optional - Server Configuration
PORT=8080
NODE_ENV=development

# Optional - CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Optional - Cron Secret (for scheduled tasks)
CRON_SECRET=your-cron-secret

# Optional - External APIs (Free Tier)
VT_API_KEY=your-virustotal-api-key
ABUSEIPDB_API_KEY=your-abuseipdb-api-key

# Optional - Rate Limits (defaults to free tier limits)
VT_RATE_LIMIT_PER_MIN=4
VT_RATE_LIMIT_PER_DAY=500
ABUSEIPDB_RATE_LIMIT_PER_DAY=1000

# Optional - JWT Token Expiration (in seconds)
JWT_ACCESS_TTL=3600
JWT_REFRESH_TTL=2592000
